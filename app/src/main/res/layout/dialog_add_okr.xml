<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/objectiveInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入目标(Objective)"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:maxLines="4" />

        <EditText
            android:id="@+id/descriptionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入描述"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:maxLines="4"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/keyResultsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入关键结果(Key Results)，每行一个"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/assigneeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="负责人姓名"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/periodInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/mentionsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="提及(@用户名)，每行一个"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>
